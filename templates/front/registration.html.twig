{% extends 'front.html.twig' %}

{% block body %}

    {% include 'front/components/_header.html.twig' with {
        'picture': 'build/images/registration.jpg',
        'title': ('front.registration.header.title'|trans),
    } only %}

    <div class="section">
        <h2 data-aos="zoom-out" data-aos-duration="1000">{{ 'front.registration.page.title'|trans }}</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus adipisci dicta distinctio dolore fuga
            fugiat id illo iusto, libero necessitatibus optio quae sint temporibus. Dignissimos facilis fuga magni modi
            sit!
        </p>
        {{ form_start(form) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.gender) }}
            {{ form_row(form.pictureFile) }}
            {{ form_row(form.birthDate) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.email) }}
            {{ form_row(form.address) }}
            {{ form_row(form.registrationInfo) }}
            {{ form_row(form.captcha) }}
            <div class="flex flex--content-end">
                <button type="submit" class="button">{{ 'global.validate'|trans }}</button>
            </div>
        {{ form_end(form) }}
    </div>

    {% include 'front/components/_footer.html.twig' %}

{% endblock %}
