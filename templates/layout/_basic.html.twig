<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block title %}Krav Maga Impact System{% endblock %}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/x-icon" href="/favicon.svg" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="flash-wrapper">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="flash flash--{{ type }}" data-flash="{{ type }}">{{ message|raw }}</div>
            {% endfor %}
        {% endfor %}
        </div>
        <div class="basic-page with-overlay with-background">
            <img src="{{ asset('build/images/error.webp') }}" alt="KMIS"/>
            <div class="basic-page__content">
                {% block content %}{% endblock %}
            </div>
        </div>
        <script type="text/javascript" src="{{ asset('build/tarteaucitron.js') }}"></script>
        <script type="text/javascript" src="{{ asset('build/tarteaucitron.services.js') }}"></script>
        <script type="text/javascript" src="{{ asset('build/lang/tarteaucitron.fr.js') }}"></script>
    </body>
</html>
