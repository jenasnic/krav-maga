<!DOCTYPE html>
<html lang="fr" prefix="og: http://ogp.me/ns#">
    <head>
        <title>{% block title %}Krav Maga Impact System{% endblock %}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/x-icon" href="/favicon.svg" />
        {% block meta %}{% endblock %}
        <meta property=”og:type” content=”siteweb” />
        <meta property=”og:image” content=”{{ asset('build/images/logo.svg') }}”/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="flash-wrapper">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="flash flash--{{ type }}" data-flash="{{ type }}">{{ message|raw }}</div>
            {% endfor %}
        {% endfor %}
        </div>
        <div id="page" class="{% block page_classes %}{% endblock %}">
            <header id="header">
                {{ render(controller('App\\Controller\\Front\\MenuController::menu')) }}
                {% block header %}{% endblock %}
            </header>
            <div id="page-content">
                {% block body %}{% endblock %}
            </div>
            {% include 'front/components/_footer.html.twig' %}
        </div>
        <script type="text/javascript" src="{{ asset('build/tarteaucitron.js') }}"></script>
        <script type="text/javascript" src="{{ asset('build/tarteaucitron.services.js') }}"></script>
        <script type="text/javascript" src="{{ asset('build/lang/tarteaucitron.fr.js') }}"></script>
    </body>
</html>
