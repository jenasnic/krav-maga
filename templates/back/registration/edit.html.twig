{% extends 'back.html.twig' %}

{% block body %}

    <div class="flex flex--space-between flex--items-center">
        <h2>{{ 'back.registration.edit.title'|trans }}</h2>
       <div class="row flex flex--content-end flex--items-center">
            {% if adherent.id is not null %}
                <form
                    data-confirm
                    data-confirm-message="{{ 'global.confirmDelete'|trans }}"
                    action="{{ path('bo_registration_delete', { adherent: adherent.id}) }}"
                    method="POST"
                    class="delete-form"
                >
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-'~adherent.id) }}" />
                    <button type="submit" class="button-icon button-icon--trash">{{ 'global.delete'|trans }}</button>
                </form>
            {% endif %}
            <a href="{{ path('bo_registration_list') }}" class="button-icon button-icon--back">{{ 'global.back'|trans }}</a>
        </div>
    </div>

    <div class="form-wrapper">
        {{ form_start(form) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.gender) }}
            {{ form_row(form.pictureFile) }}
            {{ form_row(form.birthDate) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.email) }}
            {{ form_row(form.address) }}
            {{ form_row(form.registrationInfo.purpose) }}
            {{ form_row(form.registrationInfo.medicalCertificateFile) }}
            {{ form_row(form.registrationInfo.copyrightAuthorization) }}
            <div class="flex flex--content-end">
                <button type="submit" class="button">{{ 'global.validate'|trans }}</button>
            </div>
        {{ form_end(form) }}
    </div>

    <div class="separator--4"></div>

{% endblock %}
