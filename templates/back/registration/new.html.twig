{% extends 'back.html.twig' %}

{% block body %}

    <h1 class="title">{{ 'back.registration.new.title'|trans }} - {{ 'back.registration.new.season'|trans }} {{ registration.season.label }}</h1>

    <div class="form-wrapper">
        {{ form_start(form) }}
        {# @todo display full form with bulma #}

        <div class="columns">
            <div class="column">{{ form_row(form.adherent.firstName) }}</div>
            <div class="column">{{ form_row(form.adherent.lastName) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.adherent.pseudonym) }}</div>
            <div class="column">{{ form_row(form.adherent.birthDate) }}</div>
            <div class="column">{{ form_row(form.adherent.gender) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.adherent.pictureFile) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.adherent.email) }}</div>
            <div class="column">{{ form_row(form.adherent.phone) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.adherent.address.street) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.adherent.address.zipCode) }}</div>
            <div class="column">{{ form_row(form.adherent.address.city) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.comment) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.privateNote) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.licenseNumber) }}</div>
            <div class="column">{{ form_row(form.licenseDate) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.medicalCertificateFile) }}</div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="fieldset">
                    {{ form_label(form.emergency) }}
                    <div class="columns">
                        <div class="column">{{ form_row(form.emergency.lastName) }}</div>
                        <div class="column">{{ form_row(form.emergency.firstName) }}</div>
                        <div class="column">{{ form_row(form.emergency.phone) }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.purpose) }}</div>
            <div class="column">{{ form_row(form.registeredAt) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.copyrightAuthorization) }}</div>
        </div>
        <div class="columns">
            <div class="column">{{ form_row(form.ffkPassport) }}</div>
        </div>
        <div class="is-flex is-flex-direction-row is-justify-content-flex-end is-align-content-center">
            <div class="block">
                <a href="{{ path('bo_adherent_list') }}" class="button is-outlined">{{ 'global.cancel'|trans }}</a>
                <button type="submit" class="button is-primary">{{ 'global.validate'|trans }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
