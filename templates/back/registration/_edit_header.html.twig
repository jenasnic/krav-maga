<nav class="level">
    <div class="level-right">
        <p class="level-item">
            <a href="{{ path('bo_registration_list') }}" target="_blank" class="button is-outlined">
                <span>{{ 'global.back'|trans }}</span>
                <span class="icon is-small">
                        <i class="fas fa-export"></i>
                    </span>
            </a>
        </p>
        <p class="level-item">
            <form
                data-confirm
                data-confirm-message="{{ 'global.confirmDelete'|trans }}"
                action="{{ path('bo_registration_delete', { adherent: adherent.id}) }}"
                method="POST"
            >
                <input type="hidden" name="_token" value="{{ csrf_token('delete-'~adherent.id) }}" />
                <button type="submit" class="button is-danger">
                    <span>{{ 'global.delete'|trans }}</span>
                    <span class="icon is-small">
                                    <i class="fas fa-times"></i>
                        </span>
                </button>
            </form>
        </p>
    </div>
</nav>

<div class="tabs is-centered is-boxed">
    <ul>
        <li{% if current == 'adherent' %} class="is-active"{% endif %}>
            <a href="#">{{ 'back.registration.edit.tab.adherent'|trans }}</a>
        </li>
        <li{% if current == 'registration' %} class="is-active"{% endif %}>
            <a href="#">{{ 'back.registration.edit.tab.registration'|trans }}</a>
        </li>
        <li{% if current == 'licence' %} class="is-active"{% endif %}>
            <a href="#">{{ 'back.registration.edit.tab.licence'|trans }}</a>
        </li>
        <li{% if current == 'payments' %} class="is-active"{% endif %}>
            <a href="#">{{ 'back.registration.edit.tab.payments'|trans }}</a>
        </li>
    </ul>
</div>
