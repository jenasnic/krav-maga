{% extends 'layout/_back.html.twig' %}

{% block body %}

    {% form_theme form 'back/payment/_form.html.twig' %}

    <h1 class="title">{{ 'back.payment.edit.title'|trans }} - {{ ('enum.paymentType.'~payment.paymentType)|trans }}</h1>

    <div class="form-wrapper">
        {{ form_start(form) }}
        {{ form_row(form) }}
        <div class="is-flex is-flex-direction-row is-justify-content-flex-end is-align-content-center">
            <div class="block">
                <a href="{{ backLink }}" class="button is-outlined">{{ 'global.cancel'|trans }}</a>
                <button type="submit" class="button is-primary">{{ 'global.validate'|trans }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
