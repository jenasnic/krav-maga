{% extends 'back.html.twig' %}

{% block body %}

    <div data-grid="data-grid">

        <nav class="level">
            <div class="level-left">
                <div class="level-item">
                    <div class="field has-addons">
                        <p class="control has-icons-left">
                            <input id="input-search-id" class="search input" type="text" autofocus="autofocus" placeholder="{{ 'global.search'|trans }}" />
                            <span class="icon is-small is-left">
                                <i class="icon-search"></i>
                            </span>
                        </p>
                    </div>
                </div>
                {% for filter in filters %}
                    <p class="level-item">
                        <a href="{{ path('bo_adherent_list', {'filter': filter}) }}" class="button is-outlined is-info">{{ ('back.adherent.list.filter.'~filter)|trans }}</a>
                    </p>
                {% endfor %}
            </div>
            <div class="level-right">
                <p class="level-item">
                    <a href="{{ path('bo_export_adherent') }}" target="_blank" class="button is-primary">
                        <span>{{ 'global.export'|trans }}</span>
                        <span class="icon is-small">
                            <i class="icon-export"></i>
                        </span>
                    </a>
                </p>
                <p class="level-item">
                    <a href="{{ path('bo_registration_new') }}" target="_blank" class="button is-primary">
                        <span>{{ 'back.adherent.list.action.add'|trans }}</span>
                        <span class="icon is-small">
                            <i class="icon-more"></i>
                        </span>
                    </a>
                </p>
            </div>
        </nav>

        <p>{{ registrations|length }} inscriptions</p>

        {% embed 'back/components/_table.html.twig' %}

        {% block thead %}
            <th>
                {{ 'back.adherent.list.header.lastName'|trans }}
                <div class="sort" data-sort="lastName"></div>
            </th>
            <th>
                {{ 'back.adherent.list.header.firstName'|trans }}
                <div class="sort" data-sort="firstName"></div>
            </th>
            <th>{{ 'back.adherent.list.header.phone'|trans }}</th>
            <th>{{ 'back.adherent.list.header.email'|trans }}</th>
            <th>{{ 'back.adherent.list.header.season'|trans }}</th>
            <th>
                {{ 'back.adherent.list.header.registeredAt'|trans }}
                <div class="sort" data-sort="registeredAt"></div>
            </th>
            <th></th>
        {% endblock %}

        {% block tbody %}
            {% for registration in registrations %}
                <tr>
                    <td class="lastName">{{ registration['lastName'] }}</td>
                    <td class="firstName">{{ registration['firstName'] }}</td>
                    <td class="phone">{{ registration['phone'] }}</td>
                    <td class="email">{{ registration['email'] }}</td>
                    <td class="season">{{ registration['seasonLabel'] }}</td>
                    <td class="registeredAt">{{ registration['registeredAt']|date('d/m/Y') }}</td>
                    <td class="center">
                        <a href="{{ path('bo_adherent_edit', {'adherent': registration['adherentId']}) }}" class="button is-warning">
                            <span class="icon"><i class="icon-pencil"></i></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}

    {% endembed %}

    </div>

{% endblock %}
