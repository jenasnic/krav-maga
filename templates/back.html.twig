<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block title %}BO - KMIS{% endblock %}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/x-icon" href="/favicon.svg" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('admin') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('admin') }}
        {% endblock %}
    </head>
    <body>
        <div class="flash-wrapper">
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="flash notification is-{{ type }}" data-flash="{{ type }}">{{ message|raw }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        <div id="page">
            <section class="section">
                {% include 'back/components/_header.html.twig' %}
            </section>
            <section class="section page-content">
                <div class="container">
                    {% block body %}{% endblock %}
                </div>
            </section>
            <section class="section">
                {% include 'back/components/_footer.html.twig' %}
            </section>
        </div>
    </body>
</html>
