<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block title %}Krav Mga Impact System{% endblock %}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/x-icon" href="/favicon.svg" />
        {% block meta %}
            <meta name="keywords" content="krav-maga, self-defense, combat, cardio, training" />
        {% endblock %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div id="page" class="{% block page_classes %}{% endblock %}">
            <header id="header">
                {% include 'front/components/_menu.html.twig' %}
                {% block header %}{% endblock %}
            </header>
            <div id="page-content">
                {% block body %}{% endblock %}
            </div>
            {% include 'front/components/_footer.html.twig' %}
        </div>
        <script type="text/javascript" src="{{ asset("build/tarteaucitron.js") }}"></script>
        <script type="text/javascript" src="{{ asset("build/tarteaucitron.services.js") }}"></script>
        <script type="text/javascript" src="{{ asset("build/lang/tarteaucitron.fr.js") }}"></script>
    </body>
</html>
